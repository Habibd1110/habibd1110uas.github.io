<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="240dp"
    android:padding="32dp">

    <RadioGroup
        android:id="@+id/rad_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/nama_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama ASC" />

        <RadioButton
            android:id="@+id/nama_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama DESC" />

        <RadioButton
            android:id="@+id/stok_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok ASC" />

        <RadioButton
            android:id="@+id/stok_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok DESC" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rad_group" />

</androidx.constraintlayout.widget.ConstraintLayout>